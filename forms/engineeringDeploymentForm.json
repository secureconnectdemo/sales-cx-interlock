{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Input.Text",
      "id": "formType",
      "value": "deployment",
      "isVisible": false
    },
    {
      "type": "TextBlock",
      "text": "Secure Access â€“ Onboard and Deployment",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Please fill out this form when a customer plans to deploy more than 2000 users in a short timeframe.",
      "wrap": true,
      "spacing": "Small"
    },
    {
      "type": "Input.Text",
      "id": "customerName",
      "placeholder": "Enter customer name",
      "label": "Customer Name"
    },
    {
      "type": "Input.Text",
      "id": "orgId",
      "placeholder": "Enter Org ID",
      "label": "Customer Org ID"
    },
    {
      "type": "Input.Text",
      "id": "totalLicenses",
      "placeholder": "e.g.: 3500 SIA / 3000 SPA",
      "label": "Total Licenses (SIA/SPA)"
    },
    {
      "type": "Input.Text",
      "id": "alreadyDeployed",
      "placeholder": "e.g.: 1500 SIA / 500 SPA",
      "label": "Already Deployed (SIA/SPA)"
    },
    {
      "type": "Input.Text",
      "id": "plannedRollout",
      "placeholder": "e.g.: 2000 SIA / 2500 SPA",
      "label": "Planned Rollout (SIA/SPA)"
    },
    {
      "type": "Input.Text",
      "id": "deploymentPlan",
      "placeholder": "Provide deployment plan details",
      "isMultiline": true,
      "label": "Deployment Plan Info"
    },
    {
      "type": "Input.Text",
      "id": "fileUploadInfo",
      "placeholder": "Add upload link or write 'To be sent'",
      "label": "File Upload Info (optional)"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit Deployment Form"
    }
  ]
}
