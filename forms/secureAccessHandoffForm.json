{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "🔐 Secure Access IT Handoff Checklist",
      "weight": "Bolder",
      "size": "Large",
      "horizontalAlignment": "Center"
    },
    {
      "type": "TextBlock",
      "text": "Completion Score",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "id": "scoreColorFeedback",
      "text": "🔴 55% - Action Required",
      "color": "Attention",
      "wrap": true
    },
    {
      "type": "Input.Toggle",
      "title": "Secure Access dashboard admin access granted to primary IT owner(s)",
      "id": "dashboardAccess",
      "valueOff": "false",
      "valueOn": "true"
    },
    {
      "type": "Input.Toggle",
      "title": "Connectivity established (Secure Client, IPsec tunnels)",
      "id": "connectivity",
      "valueOff": "false",
      "valueOn": "true"
    },
    {
      "type": "Input.Toggle",
      "title": "DNS redirection active and verified",
      "id": "dnsRedirect",
      "valueOff": "false",
      "valueOn": "true"
    },
    {
      "type": "Input.Toggle",
      "title": "SWG or ZTNA policies configured and active",
      "id": "ztnaConfigured",
      "valueOff": "false",
      "valueOn": "true"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "adoptionBlockers",
      "isMultiSelect": true,
      "style": "expanded",
      "choices": [
        { "title": "🔴 No Budget / Not a Priority", "value": "noBudget" },
        { "title": "🔴 Infrastructure Not Ready", "value": "infraNotReady" },
        { "title": "🔴 Product Not GA or Missing Features", "value": "productNotGA" },
        { "title": "🚫 Training or Configuration Support Needed", "value": "trainingNeeded" },
        { "title": "🚫 Customer Perceives Product as Complex", "value": "productComplex" },
        { "title": "🚫 Partner Unresponsive or Unenabled", "value": "partnerIssue" },
        { "title": "🟢 Documentation Not Found", "value": "docMissing" },
        { "title": "🟢 Invalid or Missing Contact Info", "value": "contactMissing" },
        { "title": "🟢 Ownership or Success Plan Unclear", "value": "ownershipUnclear" }
      ]
    },
    {
      "type": "Input.Text",
      "id": "comments",
      "isMultiline": true,
      "placeholder": "Add any final notes here"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "📨 Submit Handoff",
      "data": {
        "formType": "secureAccessHandoff",
        "triggerWebexNotification": true
      }
    }
  ]
}
