{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "Secure Access Handoff Checklist",
      "weight": "Bolder",
      "size": "Large",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "customerName",
      "placeholder": "Customer Name",
      "label": "Customer Name"
    },
    {
      "type": "Input.Text",
      "id": "actionPlanLink",
      "placeholder": "Paste the Action Plan link (e.g. Salesforce URL)",
      "label": "\ud83d\udcce Action Plan Link (Optional)"
    },
    {
      "type": "Input.Text",
      "id": "actionPlanCloseDate",
      "placeholder": "e.g. 2025-06-07",
      "label": "\ud83d\udcc5 Action Plan Close Date (Optional)"
    },
    {
      "type": "Input.Text",
      "id": "submittedBy",
      "placeholder": "Your Name or Email",
      "label": "Submitted By"
    },
    {
      "type": "Input.Text",
      "id": "strategicCss",
      "placeholder": "Enter Strategic CSS name or email",
      "label": "Strategic CSS Name or Email"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "customerPulse",
      "label": "Choose Customer Pulse",
      "style": "expanded",
      "isRequired": true,
      "choices": [
        {
          "title": "Green",
          "value": "Green"
        },
        {
          "title": "Orange",
          "value": "Orange"
        },
        {
          "title": "Red",
          "value": "Red"
        }
      ]
    },
    {
      "type": "Input.ChoiceSet",
      "id": "accountStatus",
      "label": "Account Status",
      "style": "expanded",
      "choices": [
        {
          "title": "Completed - Successful",
          "value": "Completed - Successful"
        },
        {
          "title": "Completed - Unsuccessful",
          "value": "Completed - Unsuccessful"
        }
      ]
    },
    {
      "type": "Input.ChoiceSet",
      "id": "useCase",
      "label": "Primary Use Case(s)",
      "isMultiSelect": true,
      "style": "expanded",
      "choices": [
        {
          "title": "Secure Private Access (SPA)",
          "value": "SPA"
        },
        {
          "title": "Secure Internet Access (SIA)",
          "value": "SIA"
        },
        {
          "title": "Remote Access VPN (RA-VPN)",
          "value": "RA-VPN"
        },
        {
          "title": "ZTA with Client",
          "value": "ZTA Client"
        },
        {
          "title": "ZTA Clientless",
          "value": "ZTA Clientless"
        },
        {
          "title": "IPsec Tunnels",
          "value": "IPsec Tunnels"
        }
      ]
    },
    {
      "type": "Input.Text",
      "id": "openTickets",
      "label": "Open Tickets (if any)",
      "placeholder": "Paste TAC SRs, Jira, or internal references"
    },
    {
      "type": "Input.Text",
      "id": "comments",
      "isMultiline": true,
      "placeholder": "Share any extra context, blockers, or notes here..."
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "\ud83d\udce8 Submit",
      "data": {
        "formType": "secureAccessChecklist",
        "targetWebexRoom": "Strategic Css"
      }
    }
  ]
}
