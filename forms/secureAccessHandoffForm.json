{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "\ud83d\ude80 Secure Access Handoff Form",
      "wrap": true,
      "weight": "Bolder",
      "size": "Large",
      "horizontalAlignment": "Center"
    },
    {
      "type": "TextBlock",
      "text": "Customer Name",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "customerName",
      "placeholder": "Enter Customer Name"
    },
    {
      "type": "TextBlock",
      "text": "Org ID",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "orgId",
      "placeholder": "Enter Org ID"
    },
    {
      "type": "TextBlock",
      "text": "Pilot Status",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "pilotStatus",
      "style": "compact",
      "choices": [
        {
          "title": "\ud83d\udfe2 Good",
          "value": "Good"
        },
        {
          "title": "\ud83d\udfe1 Needs Assistance",
          "value": "Needs Assistance"
        },
        {
          "title": "\ud83d\udd34 At-Risk",
          "value": "At-Risk"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Select Adoption Barriers",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "risks",
      "isMultiSelect": true,
      "style": "expanded",
      "choices": [
        {
          "title": "No internal ownership",
          "value": "No ownership"
        },
        {
          "title": "SAML incomplete",
          "value": "SAML"
        },
        {
          "title": "IPSec tunnel unstable",
          "value": "IPSec"
        },
        {
          "title": "Secure Client not pushed to devices",
          "value": "Secure Client"
        },
        {
          "title": "No test plan",
          "value": "No test plan"
        },
        {
          "title": "DNS leak not fixed",
          "value": "DNS leak"
        },
        {
          "title": "Blocked by other project",
          "value": "Other project"
        },
        {
          "title": "RBI or decryption not enabled",
          "value": "No RBI"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Final Score (optional, external calculation)",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "finalScore",
      "placeholder": "e.g. 85"
    },
    {
      "type": "TextBlock",
      "text": "Submitted By",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "submittedBy",
      "placeholder": "Your Name or Email"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "\ud83d\udce8 Submit",
      "data": {
        "formType": "handoff"
      }
    }
  ]
}
